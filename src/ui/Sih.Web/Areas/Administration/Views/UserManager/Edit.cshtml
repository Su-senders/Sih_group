@model Sih.Web.Areas.Administration.Models.UtilisateurModelVueEdit
@{
    ViewBag.Title = "Editer l'utilisateur";

}


@*Passage de message à l'utilisateur'*@
<partial name="~/Views/Shared/_StatusMessage.cshtml" model=@TempData["_StatusMessage"] />

<section class="content">
    <div class="row justify-content-center">
        <div class="col">
            <form class="form-horizontal" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-header border-transparent  bg-gradient-blue">
                        <h3 class="card-title">@Localizer["Mise à jour d'un Utilisateur"]</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <a asp-area="Helper" asp-controller="Office" asp-action="Index" class="btn btn-tool"><i class="fas fa-times"></i></a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="form-group-sm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="p-2" style="border-style:ridge;">
                                <div class="row">
                                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12 form-group">
                                        <label asp-for="UserName" class="control-label"></label>
                                        <input asp-for="UserName" class="form-control" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12 form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12 form-group">
                                        <label asp-for="PhoneNumber" class="control-label">Valeur initiale</label>
                                        <input asp-for="PhoneNumber" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <div class="d-grid gap-2 d-flex justify-content-center">
                            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-reply">&nbsp; @Localizer["Annuler"]</i></a> &nbsp; &nbsp;
                            <button class="btn btn-secondary" type="submit" onclick="return confirm('@Localizer[" êtes-vous sûrs de vouloir envoyer ce formulaire ?"]')"><i class="fa fa-check-circle" aria-hidden="true"></i>&nbsp;@Localizer["Valider"]</button>
                        </div>
                    </div>

                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </form>

            <hr />
        </div>
    </div>
</section>

@*insertion de la page partiel du filtre mission*@

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script src="~/js/FiltreMission.js"></script>
<script src="~/js/AddInputFileBox.js"></script>
}

@section ContentHeader
{
<div class="col-sm-6">
    <h1>@Localizer["Utilisateur"]</h1>
</div>
<div class="col-sm-6">
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item">
            <a asp-area="Helper" asp-controller="Office" asp-action="Index">
                Dashboard
            </a>
        </li>
        <li class="breadcrumb-item active">@Localizer["Mise à jour d'un utilisateur"]</li>
    </ol>
</div>
}

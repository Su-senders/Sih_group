@model Sih.Web.Areas.Administration.Models.UtilisateurModelVue
@{
    ViewBag.Title = "Detail de l'utilisateur";

}

@*Passage de message à l'utilisateur'*@
<partial name="~/Views/Shared/_StatusMessage.cshtml" model=@TempData["_StatusMessage"] />

<div class="card">
    <div class="card-header border-transparent  bg-gradient-blue">
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <a asp-area="Helper" asp-controller="Office" asp-action="Index" class="btn btn-tool"><i class="fas fa-times"></i></a>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body disabled">
        <div class="form-group-sm">
            <div class="p-2" style="border-style:ridge;">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12 order-2 order-md-1">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">@Localizer["Nom & prénom"]</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Model.Utilisateur.NomPrenom</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">@Localizer["Email"]</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Model.Utilisateur.Email</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 form-group">
                                <div class="info-box bg-light">
                                    <div class="info-box-content">
                                        <span class="info-box-text text-center text-muted">@Localizer["Téléphone"]</span>
                                        <span class="info-box-number text-center text-muted mb-0">@Model.Utilisateur.PhoneNumber</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
            <div class="d-grid gap-2 d-flex justify-content-center">
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-reply">&nbsp; @Localizer["Annuler"]</i></a> &nbsp; &nbsp;
                <a asp-action="Edit" asp-route-id="@Model.Utilisateur.Id" class="btn btn-secondary"><i class="fa fa-edit">&nbsp; @Localizer["Editer"]</i></a> &nbsp; &nbsp;
                <a asp-action="Delete" asp-route-id="@Model.Utilisateur.Id" class="btn btn-secondary" onclick="return confirm('@Localizer["Êtes-vous sûrs de vouloir supprimer cet enregistrement?"]')"><i class="fa fa-trash-alt"></i>&nbsp; @Localizer["Supprimer"]</a>
            </div>
        </div>
        <!-- /.card-footer -->
    </div>
</div>
<!-- /.card -->

@section ContentHeader
{
    <div class="col-sm-6">
        <h1>@Localizer["Utilisateur"]</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">
                <a asp-area="Helper" asp-controller="Office" asp-action="Index">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active">@Localizer["Détail de l'utilisateur"]</li>
        </ol>
    </div>
}
@section Styles
{
    @{await Html.RenderPartialAsync("/Views/Shared/AdminLTE/_GalleryStyles.cshtml");}
}

@section Scripts
{
    @{await Html.RenderPartialAsync("/Views/Shared/AdminLTE/_GalleryScripts.cshtml");}
}

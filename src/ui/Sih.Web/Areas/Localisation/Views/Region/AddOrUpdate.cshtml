@model Sih.Entities.Localisation.RegionEntity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="titre">@Localizer["Ajouter ou mettre à jour un Pelerin"]</p>

<br />
<hr style="height:2px;background-color:midnightblue" />
<div class="row">
    <div class="col-md-3">
        <img src="~/img/dattes.png" width="125" height="125" style="position:absolute" />
    </div>
    <div class="col-md-9">
        <div style="border-style:groove; border-radius:15px">
            <form asp-action="AddOrUpdate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RegionEntityId" />
                <div class="form-group row">
                    <div class="col-md-4 ml-2">
                        <label asp-for="CodeReg" class="control-label"></label>
                    </div>
                    <div class="col-md-6 ml-2">
                        <input asp-for="CodeReg" class="form-control" />
                        <span asp-validation-for="CodeReg" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4 ml-2">
                        <label asp-for="NomReg" class="control-label"></label>
                    </div>
                    <div class="col-md-6 ml-2">
                        <input asp-for="NomReg" class="form-control" />
                        <span asp-validation-for="NomReg" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Ajouter ou mettre à jour"]" class="btn btn-outline-primary" />                    <div>
                    <a asp-action="Index" class="btn btn-secondary">@Localizer["Afficher la liste"]</a>

</div>
                </div>
</form>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

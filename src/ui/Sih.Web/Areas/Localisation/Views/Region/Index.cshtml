@model IEnumerable<Sih.Entities.Localisation.RegionEntity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrUpdate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodeReg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomReg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodeReg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomReg)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegionEntityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RegionEntityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RegionEntityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

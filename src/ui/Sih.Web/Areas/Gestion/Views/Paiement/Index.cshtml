@model IEnumerable<Sih.Entities.Gestion.PaiementEntity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrUpdate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dateversement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Montant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inscription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dateversement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Montant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inscription.InscriptionEntityId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaiementEntityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaiementEntityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaiementEntityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

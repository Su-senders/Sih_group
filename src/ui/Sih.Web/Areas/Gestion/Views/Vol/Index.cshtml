        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numvol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datedepart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VilleId)
            </td>
